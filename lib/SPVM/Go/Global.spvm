class Go::Global {
  use Go;
  
  our $INITIALIZED : int;
  
  our $GO : Go;
  
  static method instance : Go () {
    
    unless ($INITIALIZED) {
      my $go = Go->new;
      
      $GO = $go;
      
      $INITIALIZED = 1;
    }
    
    return $GO;
  }
}

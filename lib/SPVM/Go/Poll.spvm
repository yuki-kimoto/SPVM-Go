class Go::Poll {
  allow Go::Schedule::Task;
  
  use Go::Coroutine;
  use List;
  
  has coroutines_h : Hash of Go::Coroutine;
  
  static method new : Go::Poll () {
    
    my $self = new Go::Poll;
    
    $self->{coroutines_h} = Hash->new;
    
    return $self;
  }
  
}

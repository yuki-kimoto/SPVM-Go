class Go::Schedule::Thread {
  use Go::Thread;
  use Go::Schedule::Process;
  use Go::Coroutine;
  use Go::Thread::Callback;
  
  # Interfaces
  interface Go::Queue::Element;
  
  # Fields
  has process : rw Go::Schedule::Process;
  
  has thread : rw Go::Thread;
  
  has coroutine : rw Go::Coroutine;
  
  has next : rw Go::Queue::Element;
  
  # Class Methods
  static method new : Go::Schedule::Thread () {
    

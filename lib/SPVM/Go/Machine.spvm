class Go::Machine {
  use Go::Thread;
  use Go::Process;
  use Go::Coroutine;
  use Go::Task;
  
  # Interfaces
  interface Go::Queue::Element;
  
  # Fields
  has thread : rw Go::Thread;
  
  has next : rw Go::Queue::Element;
  
  has task : rw Go::Task;
  
  # Instance Method
  method start : void () {
    
    my $task = $self->{task};
    
    my $thread = Go::Thread->new($task);
    
    $self->{thread} = $thread;
  }
}
